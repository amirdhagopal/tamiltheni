{
    "name": "tamiltheni",
    "version": "1.0.0",
    "type": "module",
    "description": "Tamil language learning web application for the FETNA Tamil Theni competition",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "eslint src/**/*.ts test/**/*.ts",
        "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.{ts,html,css}\" \"test/**/*.ts\" \"documentation/**/*.md\" \"*.{js,json,md}\"",
        "format:check": "prettier --check \"src/**/*.{ts,html,css}\" \"test/**/*.ts\" \"documentation/**/*.md\" \"*.{js,json,md}\"",
        "test": "vitest",
        "check-all": "npm run format:check && npm run lint && npm run test -- --run && npm run build"
    },
    "keywords": [
        "tamil",
        "language-learning",
        "education",
        "fetna"
    ],
    "author": "Peoria Tamil School",
    "license": "CC-BY-4.0",
    "private": true,
    "devDependencies": {
        "@types/node": "^25.0.8",
        "@typescript-eslint/eslint-plugin": "^8.53.0",
        "@typescript-eslint/parser": "^8.53.0",
        "eslint": "^9.18.0",
        "globals": "^17.0.0",
        "jsdom": "^27.4.0",
        "prettier": "^3.4.2",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vite-plugin-pwa": "^1.2.0",
        "vitest": "^4.0.17"
    }
}

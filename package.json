{
    "name": "tamiltheni",
    "version": "1.0.0",
    "type": "module",
    "description": "Tamil language learning web application for the FETNA Tamil Theni competition",
    "scripts": {
        "dev": "vite --config config/vite.config.ts",
        "build": "tsc && vite build --config config/vite.config.ts && npm run postbuild",
        "postbuild": "sed -i '' 's/<link rel=\"manifest\" href=\"\\.\\/manifest\\.webmanifest\">//g' docs/html/*.html",
        "preview": "vite preview --config config/vite.config.ts",
        "lint": "eslint src/**/*.ts test/**/*.ts",
        "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
        "format": "prettier --config config/.prettierrc --write \"src/**/*.{ts,html,css}\" \"test/**/*.ts\" \"documentation/**/*.md\" \"*.{js,json,md}\"",
        "format:check": "prettier --config config/.prettierrc --check \"src/**/*.{ts,html,css}\" \"test/**/*.ts\" \"documentation/**/*.md\" \"*.{js,json,md}\"",
        "test": "vitest -c config/vite.config.ts",
        "test:e2e": "playwright test --config config/playwright.config.ts",
        "test:e2e:ui": "playwright test --config config/playwright.config.ts --ui",
        "check-all": "npm run format:check && npm run lint && npm run test -- --run && npm run build && npm run test:e2e"
    },
    "keywords": [
        "tamil",
        "language-learning",
        "education",
        "fetna"
    ],
    "author": "Peoria Tamil School",
    "license": "CC-BY-4.0",
    "private": true,
    "devDependencies": {
        "@playwright/test": "^1.57.0",
        "@types/node": "^25.0.8",
        "@typescript-eslint/eslint-plugin": "^8.53.0",
        "@typescript-eslint/parser": "^8.53.0",
        "eslint": "^9.18.0",
        "globals": "^17.0.0",
        "jsdom": "^27.4.0",
        "prettier": "^3.4.2",
        "typescript": "^5.9.3",
        "vite": "^7.3.1",
        "vite-plugin-pwa": "^1.2.0",
        "vitest": "^4.0.17"
    }
}
